<div class="row m-4">
    {{#with web}}
    <main>
        <section class="col-12">
            <div>
                <center>
                    <h1>{{> title data="Web" big=true}}</h1>
                    <hr>
                </center>
                <div>
                    <h2>Languages</h2>
                    {{#each languages}}
                    <h2>{{name}}</h2>
                    <p>{{description}}</p>

                    {{#if elements}}
                    <h3>Elements</h3>
                    <ul>
                        {{#each elements}}
                        <li class="mb-3">
                            <strong>Name:</strong> {{name}}
                            <br>
                            <strong>Description:</strong> {{description}}
                        </li>
                        {{/each}}
                    </ul>
                    {{/if}}

                    <hr>
                    <div>
                        {{#if properties}}
                        <h3>Properties</h3>
                        <ul>
                            {{#each properties}}
                            <li class="mb-3">
                                <strong>Name:</strong> {{name}}
                                <br>
                                <strong>Description:</strong> {{description}}
                            </li>
                            <li>
                                {{#each values}}
                                <p>Value: {{value}}</p>
                                <p>Description{{description}}</p>
                                {{/each}}
                            </li>
                            {{/each}}
                        </ul>
                        {{/if}}
                    </div>
                    <div>
                        {{#if functions}}
                        <h3>Functions</h3>
                        <ul>
                            {{#each functions}}
                            <li class="mb-3">
                                <strong>Name:</strong> {{name}}
                                <br>
                                <strong>Description:</strong> {{description}}
                            </li>
                            {{/each}}
                        </ul>
                        {{/if}}
                    </div>
                    {{/each}}
                </div>

            </div>
        </section>
    </main>
    {{/with}}
</div>