<div class="row m-4">
    <main>
        <section class="col-12">
            <div class="text-center">
                {{#with page_header}}
                <h1>{{title}}</h1>
                <p class="text-uppercase">{{description}}</p>
                {{/with}}
            </div>
            {{#with section}}
            <div class="card mb-4">
                <div class="card-body">
                    {{#with about_us}}
                    {{#with title_list}}
                    <p class="display-6 text-end"> {{main}}</p>
                    <h2 class="text-end">{{sub}}</h2>
                    {{/with}}
                    <br>
                    {{#with button}}
                    <button class="btn btn-outline-info">
                        {{text}}
                    </button>
                    {{/with}}
                    {{/with}}
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-body">
                    {{#with advantage}}
                    <div class="display-5 text-muted">{{title}}</div>

                    <br>
                    <div class="card mb-4">
                        <div class="card-body">
                            {{#with efficiency}}
                            <div class="display-4 text-muted">{{title}}</div>
                            <br>
                            <h6>{{sub_title}}</h6>
                            <br>
                            <p>{{description}}</p>
                            <br>
                            {{#with button}}
                            <button class="btn btn-outline-warning">
                                {{this}}
                            </button>
                            {{/with}}
                            {{/with}}
                        </div>
                    </div>

                    <div class="card mb-4">
                        <div class="card-body">
                            {{#with innovation}}
                            <div class="text-center mb-3">
                                <div class="display-4 text-muted">{{title}}</div>
                                <br>
                                <h6>{{sub_title}}</h6>
                                <br>
                                <p>{{description}}</p>
                            </div>

                            {{#with button}}
                            <button class="btn btn-outline-warning">
                                {{this}}
                            </button>
                            {{/with}}
                            {{/with}}
                        </div>
                    </div>
                    <div class="card mb-2">
                        <div class="card-body">
                            {{#with collaboration}}
                            <div class="text-end mb-2">
                                <div class="display-4 text-muted">{{title}}</div>
                                <br>
                                <h6>{{sub_title}}</h6>
                                <br>
                                <p>{{description}}</p>
                            </div>
                            {{#with button}}
                            <button class="btn btn-outline-warning">
                                {{this}}
                            </button>
                            {{/with}}
                            {{/with}}
                        </div>
                    </div>
                    {{/with}}
                </div>
            </div>
            <section>
                <div class="card">
                    <div class="card-body">
                        {{#with agreement}}
                        <div class="display-5 mb-3">
                            {{title}}
                        </div>
                        <div class="card">
                            <div class="card-body">
                                {{#with info}}
                                <h5>{{sub_title}}</h5>
                                <br>
                                <div class="card">
                                    <div class="card-body">
                                        {{#with detail}}
                                        <p>{{text}}</p>
                                        <button class="btn btn-success">–êccept</button>
                                        {{/with}}
                                    </div>
                                </div>
                                {{/with}}
                            </div>

                        </div>
                        {{/with}}
                    </div>
                </div>
            </section>
            {{/with}}

        </section>

    </main>
</div>