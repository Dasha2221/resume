<div class="row m-4">
    {{#with person}}
    <main>
        <section class="col">
            <center>
                <h1>
                    {{> title data="Person" big=true}}
                </h1>
            </center>

            <hr>
            <div class="mb-4">
                <center>
                    <h2>{{name }}</h2>
                </center>
                <ul>
                    <li><em>Age:</em> {{age}}</li>
                    <li>
                        <em>Gender:</em> {{gender}}
                    </li>
                </ul>
            </div>
            <hr>
            <div class="mb-4">
                {{#with address}}
                <center>
                    <h2>
                        <b>Address</b>
                    </h2>
                </center>
                <p>Street: {{street }} </p>
                <p>City: {{ city }}</p>
                <p>State: {{ state }}</p>
                <p>ZIP: {{ zip }}</p>
                <p>Country: {{ country }}</p>
                {{/with}}

            </div>

            <hr>

            <div class="mb-4">
                <center>
                    <h2>Education</h2>
                </center>
                <ul>
                    {{#each education}}
                    <li>Degree: <em>{{degree }}</em></li>
                    <br>
                    <li>Major: <em>{{ major }}</em></li>
                    <br>
                    <li>University: <em>{{university }}</em></li>
                    <br>
                    <li>Graduation Year: <em>{{ graduationYear }}</em></li>
                    {{/each}}
                </ul>
            </div>

            <hr>
            <div>
                <ul>
                    {{#each workExperience}}
                    <center>
                        <h2>Work Experience</h2>
                    </center>
                    <li>{{company}}</li>
                    {{title}}
                    <div class="mb-3">
                        {{startDate}} - {{endDate}}
                    </div>

                    <div class="mb-3">
                        <li>Responsibilities - "{{responsibilities}}" </li>
                    </div>

                    <hr>
                    <div class="mb-3">
                        <em>Year founded:</em> {{year_founded}}
                        <div>
                            <em>Industry:</em> {{industry}}
                        </div>
                    </div>

                    <hr>
                    <div>
                        <center>
                            <h3>Employees</h3>
                        </center>
                        {{#each employees}}
                        <li><b>Name: </b>{{name}}</li>
                        <li><b>Position: </b>{{position}}</li>
                        <li><b>Department: </b>{{department}}</li>

                        {{#each projects}}
                        <h4>Projects</h4>
                        <li>
                            <p>Name: {{name}}</p>
                        </li>
                        <li>
                            <p>Description: {{ description }}</p>
                        </li>
                        <li>
                            <p>Status: {{ status }}</p>
                        </li>
                        <hr>

                        <div>
                            {{#each teams}}
                            <center>
                                <big>
                                    <b>Teams</b>
                                </big>
                            </center>
                            <p class="mb-3">
                                <em><big>Team Name:{{team_name }}</big></em>
                            </p>


                            <b>Team Leader</b>
                            <p>Name: {{team_leader.name }}</p>
                            <p>Title: {{ team_leader.title }}</p>
                            <p>Email: {{ team_leader.email }}</p>

                            <div class="mt-3">
                                <b>Team Members</b>
                                {{#each team_members}}
                                <p>Name: {{ name }}</p>
                                <p>Title: {{ title }}</p>
                                <p>Email: {{ email }}</p>

                                <div class="mb-3">
                                    <ul>
                                        <p>
                                            <b>Skills:</b>
                                        </p>
                                        {{#each skills}}
                                        <li>{{this}}</li>
                                        {{/each}}
                                    </ul>
                                </div>

                                <hr>
                                <div class="mb-3">
                                    <p>
                                        <em>
                                            <center>
                                                <big><b>Projects</b></big>
                                            </center>
                                        </em>
                                    </p>
                                    {{#each projects}}
                                    <p><b>Name:</b> {{ name }}</p>
                                    <p><b>Description:</b> {{ description }}</p>

                                    <p><b>Technologies:</b>
                                    <p>
                                    <ul>
                                        {{#each technologies}}
                                        <li>{{ this }}</li>
                                        {{/each}}
                                    </ul>
                                    {{/each}}
                                </div>
                                {{/each}}

                            </div>
                            {{/each}}

                        </div>

                        {{/each}}
                        {{/each}}
                    </div>
                    <br>
                    <hr>
                </ul>
            </div>

            {{/each}}
        </section>
    </main>
    {{/with}}
</div>