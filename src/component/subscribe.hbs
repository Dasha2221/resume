{{#with subscribe}}
<div class="card">
    <div class="bg text-bg-dark">
        <div class="row">
            <div class="col-3">
                <div class="card-body">
                    <h2>{{header}}</h2>
                    <p>{{description}}</p>
                    {{#each buttons}}
                    <button class="btn btn-primary m-2">
                        <a href="{{link}}" class="nav-link">
                            {{text}}
                        </a>
                    </button>
                    {{/each}}

                </div>
            </div>
        </div>
    </div>
</div>
{{/with}}